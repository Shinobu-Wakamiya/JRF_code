## Install sshfs

sudo apt update
sudo apt install sshfs -y

## test connestion of cluster account from local computer 
ssh cluster@account

## On your local computer create a mount 
sudo mkdir -p /mnt/cluster_jupyter
sudo chown $USER:$USER /mnt/cluster_jupyter

## Mount remote folder locally
sshfs cluster@account:/home/shinobu-wakamiya/cluster-folder /mnt/cluster_jupyter

## check mount
ls -la /mnt/cluster_jupyter
df -h | grep cluster_jupyter
mount | grep cluster_jupyter

## access the mounted folder from jupyter
import os

mount_path = "/mnt/cluster_jupyter"


## To unmount write
umount /mnt/noreset
or 
fusermount -u /mnt/noreset        # common on Linux
